<div class>
  <div class="page-header">
    <% if @current_user %>
    <h1 id="timeline">Hello,<%= " #{@current_user.username}" %></h1>
    <% end %>
      <%= form_tag(root_path, :method => "get", id: "search-form") do %>
      <div class="input-group large-4 columns">
        <%= text_field_tag :search, params[:search], placeholder: "Search Vets", class: "input-group-field" %>
        <div class="input-group-button button">
          <%= submit_tag "Search", class: "button" %>
        </div>
      </div>
      <% end %>
      <%= button_to "List all Vets", vets_path, method: :get, class: "button info" %>
    <div id="vet-info">
      <% if params[:search] %>
        <% if @vets.present? %>
          <%= render "vet" %>
        <% else %>
          <p>There are no vets containing the term(s):
            <%= params[:search] %></p>
        <% end %>
      <% end %>
    </div>
  </div>
